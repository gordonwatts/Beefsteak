<ContentDialog
    x:Class="BeefsteakWindows.NewTaskItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BeefsteakWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add Activity"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <StackPanel>
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Title"/>
            <TextBox x:Name="textBox" TextWrapping="Wrap" Text=""/>
            <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="Description"/>
            <TextBox x:Name="textBox1" TextWrapping="Wrap" Text="" Height="200"/>
            <TextBlock x:Name="textBlock2" TextWrapping="Wrap" Text="Estimate"/>
            <Slider x:Name="slider" Maximum="7" LargeChange="1"/>

        </StackPanel>
    </Grid>
</ContentDialog>
